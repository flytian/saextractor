$( document ).ready(function() {
	$("a.research_group_link").each(function(index) {
		if ($("div#vacancy_feed_" + this.id.substr(20,6) + " p.job_links").length > 0) {
			$("div#vacancy_feed_" + this.id.substr(20,6) + " p.job_links").append(this);
		}
		else {
			$(this).hide();
		}
	});
});
</script>
